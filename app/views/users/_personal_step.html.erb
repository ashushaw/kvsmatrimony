<div class="form-group">

<div class="control-label col-sm-2">

    <%= f.label :height %>
    
    </div>
    <div class="col-sm-8 col-md-4 height">
    <%= f.number_field :height_feet, id: :height_feet ,rows: 10, class: "form-control", placeholder: "feet"%>
    
    <%= f.number_field :height_inch, id: :height_inch ,rows: 10, class: "form-control", placeholder: "inch"%> 
    
    </div>
  </div>

<div class="form-group">

<div class="control-label col-sm-2">
    <%= f.label :mother_tongue %>
    </div>       
       <div class="col-sm-8">
    <%= f.text_field :language, id: :user_language,rows: 10, class: "form-control", placeholder: "Mother Tongue"%>
  	</div>
    </div>

<script src="countries.js"></script>

<div class="form-group">

<div class="control-label col-sm-2">

    <%= f.label :country %>
    
     </div>
  
 <div class="col-sm-8">    
<select id="user_country" name="user[country]" class="form-control"></select>
    </div>   
    </div>
    <div class="form-group">
    <div class="control-label col-sm-2">

     <%= f.label :city %>
    
     </div>
 <div class="col-sm-8">     
<select id="user_city" name="user[city]" class="form-control"></select>
     </div>
    </div>    

<script language="javascript">
	populateCountries("user_country", "user_city"); // first parameter is id of country drop-down and second parameter is id of state drop-down
	
</script>